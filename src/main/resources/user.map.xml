<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="com.sannong.infrastructure.persistance.repository.UserRepository">
     <cache eviction="FIFO" flushInterval="60000" size="512" readOnly="true" />
     
     <resultMap type="User" id="userResultMap">
        <id property="userId" column="user_Id" />
        <result property="userName" column="username" />
        <result property="realName" column="user_name" />
        <result property="mailbox" column="mailbox" />
        <result property="company" column="company" />
        <result property="companyProvince" column="company_province" />
        <result property="companyCity" column="company_city" />
        <result property="companyDistrict" column="company_district" />
        <result property="companyAddress" column="company_address" />
        <result property="jobTitle" column="job_title" />
        <result property="password" column="password" />
        <result property="deskPhone" column="desk_phone" />
        <result property="cellphone" column="cellphone" />
        <result property="updateTime" column="update_time" />
        <result property="createTime" column="create_time" />
        <association property="answer" column="username" javaType="Answer" >
        	<result property="questionnaire1Answers" column="questionnaire1_answers" />
            <result property="questionnaire2Answers" column="questionnaire2_answers" />
            <result property="questionnaire3Answers" column="questionnaire3_answers" />
            <result property="questionnaire4Answers" column="questionnaire4_answers" />
            <result property="questionnaire5Answers" column="questionnaire5_answers" />
        </association>
     </resultMap>
     
     <select id="getUserByCondition"  parameterType="Map"  resultMap="userResultMap">
       	select user_name,
       				username,
                    password,
       				create_time,
       				cellphone,
       				company,
       				job_title,
       				mailbox,
       				company_address,
       				desk_phone,
       				company_province,
       				company_city,
       				company_district 
       				 from users 
       	<where>
	       	<if test="realName != null">  
	            user_name = #{realName}  
	        </if>
	        <if test="userName != null">  
	            and username = #{userName}
	        </if>
	        <if test="cellphone != null">  
            	and cellphone = #{cellphone}  
            </if>  
       	</where>
     </select>
     
     <select id="getUserByFuzzyMatch"  parameterType="Map"  resultMap="userResultMap">
       select u.user_name,
			  u.username,
			  u.create_time,
			  u.cellphone,
			  u.company,
			  u.job_title,
			  u.mailbox,
			  u.company_address,
			  u.desk_phone,
			  u.company_province,
			  u.company_city,
			  u.company_district,
			  a.questionnaire1_answers,
			  a.questionnaire2_answers,
			  a.questionnaire3_answers,
			  a.questionnaire4_answers,
			  a.questionnaire5_answers
				 from users u, answers a
       	<where>
       	    <if test="1 == 1">  
	            a.username = u.username 
	        </if>
	       	<if test="realName != null and realName != '' ">  
	            and u.user_name like CONCAT('%',#{realName},'%')  
	        </if>
	        <if test="userName != null and userName != '' ">  
	            and u.username like CONCAT('%',#{userName},'%')
	        </if>
	        <if test="cellphone != null and cellphone != '' ">  
            	and u.cellphone like CONCAT('%',#{cellphone},'%') 
            </if>
            <if test="company != null and company != '' ">  
            	and u.company like CONCAT('%',#{company},'%') 
            </if>
            <if test="jobTitle != null and jobTitle != '' ">  
            	and u.job_title like CONCAT('%',#{jobTitle},'%') 
            </if>
            <if test="mailbox != null and mailbox != '' ">  
            	and u.mailbox like CONCAT('%',#{mailbox},'%') 
            </if>
            <if test="companyAddress != null and companyAddress != '' ">  
            	and u.company_address like CONCAT('%',#{companyAddress},'%') 
            </if>
            <if test="companyProvince != null and companyProvince != '' ">  
            	and u.company_province = #{companyProvince}
            </if>
            <if test="companyCity != null and companyCity != '' ">  
            	and company_city = #{companyCity}
            </if>
            <if test="companyDistrict != null and companyDistrict != '' ">  
            	and company_district = #{companyDistrict}
            </if>
       	</where>
       	limit #{pageStart},#{pageSum}
     </select>
     
     <update  id="updateUserInfo" parameterType="User" >
     	<![CDATA[
        	update users 
        	set cellphone=#{cellphone},
        	user_name=#{realName},
        	company=#{company},
        	company_province=#{companyProvince},
        	company_city=#{companyCity},
        	company_district=#{companyDistrict},
        	company_address=#{companyAddress},
        	mailbox=#{mailbox},
        	desk_phone=#{deskPhone},
        	job_title=#{jobTitle},
        	update_time=#{updateTime}
        	where username=#{userName}
        ]]>
     </update>

    <update  id="updatePassword" parameterType="User" >
        <![CDATA[
        	update users
        	set password=#{password},
        	update_time=#{updateTime}
        	where username=#{userName}
        ]]>
    </update>
     
     <insert id="addUserInfo" parameterType="User">
         <![CDATA[
        	 insert into users(username,user_name,cellphone,password,mailbox,company,company_province,company_city,company_district,company_address,desk_phone,job_title,update_time,create_time)
	         values(#{userName},#{realName},#{cellphone},#{password},#{mailbox},#{company},#{companyProvince},#{companyCity},#{companyDistrict},#{companyAddress},#{deskPhone},#{jobTitle},#{updateTime},#{createTime})
         ]]>
     </insert>
     
     <select id="getIdByCellphone" parameterType="String" resultType="Long" >
         <![CDATA[
             select user_id from users where cellphone = #{cellphone}
          ]]>
     </select>

    <select id="getUserById" parameterType="Long" resultMap="userResultMap">
        <![CDATA[
             select * from users where user_id = #{userId}
          ]]>
    </select>

    <select id="getUserTotalCount" parameterType="Map" resultType="String">
        select count(*) from users
        <where>
	       	<if test="realName != null and realName != '' ">  
	            user_name like CONCAT('%',#{realName},'%')  
	        </if>
	        <if test="userName != null and userName != '' ">  
	            and username like CONCAT('%',#{userName},'%')
	        </if>
	        <if test="cellphone != null and cellphone != '' ">  
            	and cellphone like CONCAT('%',#{cellphone},'%') 
            </if>
            <if test="company != null and company != '' ">  
            	and company like CONCAT('%',#{company},'%') 
            </if>
            <if test="jobTitle != null and jobTitle != '' ">  
            	and job_title like CONCAT('%',#{jobTitle},'%') 
            </if>
            <if test="mailbox != null and mailbox != '' ">  
            	and mailbox like CONCAT('%',#{mailbox},'%') 
            </if>
            <if test="companyAddress != null and companyAddress != '' ">  
            	and company_address like CONCAT('%',#{companyAddress},'%') 
            </if>
            <if test="companyProvince != null and companyProvince != '' ">  
            	and company_province = #{companyProvince}
            </if>
            <if test="companyCity != null and companyCity != '' ">  
            	and company_city = #{companyCity}
            </if>
            <if test="companyDistrict != null and companyDistrict != '' ">  
            	and company_district = #{companyDistrict}
            </if>
       	</where>
    </select>


    <select id="getUserNameByCellphone" parameterType="String" resultType="String">
        select username from users where cellphone = #{cellphone}

    </select>

</mapper>
